{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "config-default",
            "displayName": "Default Config",
            "description": "Default build using Ninja generator",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "interstellar_lib_garble_BUILD_TESTS": "OFF",
                "CMAKE_C_COMPILER_LAUNCHER": "$penv{ENV_CMAKE_C_COMPILER_LAUNCHER}",
                "CMAKE_CXX_COMPILER_LAUNCHER": "$penv{ENV_CMAKE_CXX_COMPILER_LAUNCHER}"
            }
        },
        {
            "name": "config-testing",
            "displayName": "Default build using Ninja generator, with tests",
            "inherits": "config-default",
            "cacheVariables": {
                "interstellar_lib_garble_BUILD_TESTS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-release",
            "configurePreset": "config-default",
            "configuration": "Release"
        },
        {
            "name": "build-debug",
            "configurePreset": "config-default",
            "configuration": "Debug"
        }
    ],
    "testPresets": [
        {
            "name": "test-default",
            "hidden": true,
            "configurePreset": "config-testing",
            "output": {
                "outputOnFailure": true,
                "verbosity": "default"
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        },
        {
            "name": "test-release",
            "inherits": "test-default",
            "configuration": "Release"
        },
        {
            "name": "test-debug",
            "inherits": "test-default",
            "configuration": "Debug"
        }
    ]
}